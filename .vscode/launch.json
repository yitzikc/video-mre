    "version": "0.2.0",
    "configurations": [
        {
            "type": "npm",
            "script": "build",
            "path": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/built/server.js",
            "outputCapture": "std",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}